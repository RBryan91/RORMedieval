<div class="container fomulaire-connexion-container">

<div class="row justify-content-center">
<div class="col-5 fomulaire-connexion">
    <h1 class="text-center fomulaire-connexion-texte">Connexion</h1>
        <%= form_with(model: Player.new, url: authenticatePlayer_path, method: :post, class: 'form-signin') do |form| %> 
          <div class="form-group">
            <%= form.label :name, class: 'sr-only' %>
            <%= form.text_field :name, class: 'form-control', placeholder: 'Nom d\'utilisateur', required: true %>
          </div>

          <div class="form-group">
            <%= form.label :password, class: 'sr-only' %>
            <%= form.password_field :password, class: 'form-control', placeholder: 'Mot de passe', required: true %>
          </div>

          <div class="form-group">
            <%= form.submit "Se connecter", class: 'btn btn-primary btn-block button-connexion' %>
          </div>
        <% end %>

        <%= link_to "S'inscrire", new_player_path, class: 'text-center d-block mt-3btn button-link-inscrire' %>
      </div>
  </div>
</div>
