<div class="container fomulaire-connexion-container">
  <div class="row justify-content-center">
    <div class="col-5 fomulaire-inscription">
      <h1>New Master</h1>

      <%= form_with model: @master do |form| %>
        <div class="form-group mt-4">
          <%= form.text_field :username, class: 'form-control', placeholder: 'Username' %>
          <% @master.errors.full_messages_for(:username).each do |message| %>
            <div class="text-danger"><%= message %></div>
          <% end %>
        </div>

        <div class="form-group">
          <%= form.password_field :password, class: 'form-control', placeholder: 'Password' %>
          <% @master.errors.full_messages_for(:password).each do |message| %>
            <div class="text-danger"><%= message %></div>
          <% end %>
        </div>

        <%= form.submit class: 'btn btn-primary btn-block  button-connexion' %>
      <% end %>
    </div>
  </div>
</div>
