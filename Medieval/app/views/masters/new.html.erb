<h1>New Master</h1>

<%= form_with model: @master do |form| %>
  <div>
    <%= form.label :username %><br>
    <%= form.text_field :username %>
    <% @master.errors.full_messages_for(:username).each do |message| %>
      <div><%= message %></div>
      <% end %>
  </div>

  <div>
    <%= form.label :password %><br>
    <%= form.password_field :password %>
    <% @master.errors.full_messages_for(:password).each do |message| %>
      <div><%= message %></div>
      <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>