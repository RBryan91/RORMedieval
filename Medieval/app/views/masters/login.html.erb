<div class="container fomulaire-connexion-container">
  <h1 class="text-center">Welcome Master</h1> 
  <div class="row justify-content-center">
    <div class="col-5 fomulaire-connexion">
      <h2>Connexion</h2>

      <%= form_tag(authenticateMaster_path, method: 'post') do %>
        <div class="form-group mt-4">
          <%= text_field_tag :username, nil, class: 'form-control', placeholder: 'Username', required: true %>
        </div>
      
        <div class="form-group">
          <%= password_field_tag :password, nil, class: 'form-control', placeholder: 'Password', required: true %>
        </div>
        
        <div class="form-group">
          <%= submit_tag 'Login', class: 'btn btn-primary btn-block button-connexion' %>
        </div>  
      <% end %>

      <%= link_to "Register", new_master_path, class: 'text-center d-block mt-3 btn button-link-inscrire' %>
    </div>
  </div>
</div>
