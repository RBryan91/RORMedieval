<div class="container fomulaire-connexion-container">
  <div class="row justify-content-center">
    <div class="col-5 fomulaire-inscription">
        <h1>Step <%= @step.id %></h1>

        <div>
          <strong>Titre:</strong> <%= @step.titre %>
        </div>

        <div>
          <strong>Xp:</strong> <%= @step.xp %>
        </div>
        <% if @step.monster %>
          <div>
            <strong>Monstre:</strong> <%= @step.monster.name %>
          </div>
          <% else %>
          <div>
            <strong>Enigme:</strong> <%= @step.enigme.titre %>
          </div>

        <% end %>

        <a  href="/masters/<%= session[:master_id] %>">
                  <%= "Retour" %>
                </a>
    </div>
  </div>
</div>

